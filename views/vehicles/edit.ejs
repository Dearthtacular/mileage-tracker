<%- include('../partials/header') %>
    <table class="container text-center" style="color: whitesmoke; margin-top: 0.5rem;">
        <thead>
            <tr>
                <th style="border-bottom: 3px solid whitesmoke">Original Starting Odometer</th>
                <th style="border-bottom: 3px solid whitesmoke">Original Ending Odometer</th>
                <th style="border-bottom: 3px solid whitesmoke">Original Fuel Added</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <%= trip.tripStart %>
                </td>
                <td>
                    <%= trip.tripEnd %>
                </td>
                <td>
                    <%= trip.fuelInfo %>
                </td>

            </tr>
        </tbody>
    </table>
    <table class="container text-center" style="color: whitesmoke; margin-top: 0.5rem;">
        <thead>
            <tr>
                <th>Edited Starting Odometer</th>
                <th>Edited Ending Odometer</th>
                <th>Edited Fuel Added</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <form action="/tripfuels/<%= trip._id %>?_method=PUT" method="POST">
                        <input type="number" name="tripStart" value="<%= trip.tripStart %>" style="text-align: center;">
                        <br>
                <td>
                    <input type="number" name="tripEnd" value="<%= trip.tripEnd %>" style="text-align: center;">
                </td>

                <td>
                    <input type="number" name="fuelInfo" value="<%= trip.fuelInfo %>" style="text-align: center;">
                </td>
                <br>
            <tr>
                <td></td>
                <td>
                    <button type="submit" class="btn btn-primary" style="margin-top: 2rem;">Edit Trip Info</button>
                </td>
            </tr>
            </form>
            </td>
            </tr>
        </tbody>
    </table>
    <%- include('../partials/footer') %>